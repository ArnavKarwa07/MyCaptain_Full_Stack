<body>
  <div class="container">
    <h1>Blog Posts</h1>
    <ul>
      <% posts.forEach(post => { %>
        <li>
          <a href="/read/<%= post.replace('.txt', '') %>"><%= post.replace('.txt', '') %></a>
        </li>
      <% }); %>
    </ul>
    <a href="/new" class="action-buttons">Create New Post</a>
  </div>
</body>
